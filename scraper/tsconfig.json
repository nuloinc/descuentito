{
  "compilerOptions": {
    "noEmit": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["node", "bun"],
    "lib": ["ES2022", "dom"],
    "allowImportingTsExtensions": true
  }
}
